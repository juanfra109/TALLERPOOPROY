@model IEnumerable<TALLERPOON.Models.dbModels.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantProd)
            </td>
            <td>
                   <img src="@Html.DisplayFor(modelItem => item.Imagen)">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProd">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProd">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProd">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
